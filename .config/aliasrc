# aliases

# Launch neovim
alias v="nvim"

# Neovim configuration
alias vz=" v ~/.config/zsh/.zshrc"
alias vfish=" v ~/.config/fish/config.fish"
alias vbsp=" v ~/.config/bspwm/bspwmrc"
alias vsx=" v ~/.config/sxhkd/sxhkdrc"
alias vala= " v ~/.config/alacritty/alacritty.yml"
alias vterm=" v ~/.config/termite/config"
alias vvim=" v ~/.config/nvim/init.vim"
alias valias=" v ~/.config/aliasrc"
alias vlf=" v ~/.config/lf/lfrc" 
alias vx=" v ~/.config/XResources" 
alias vpicom=" v ~/.config/picom/picom.conf"
alias vxinit=" v ~/.xinitrc"

# nnn aliases 
alias nnn="nnn -C"
alias n="nnn -C"
alias ndown="nnn -C ~/Storage/Downloads/"
alias nc="nnn -C ~/.config/"
alias ns="nnn -C~/Storage/"
alias ntor="nnn -C~/Storage/Downloads/Torrents/"
alias nd="nnn -C~/Documents/"
alias ndoc="nnn -C~/Storage/Documents/"
alias nex="nnn -C/run/media/tony/"
alias nmtp= "nnn -C~/.mtp/"

# lf aliases 
alias scripts="lfcd ~/.local/bin"
alias lf="lf"
alias lfdown="lf ~/Downloads"
alias lfc="lf ~/.config/"
alias lfs="lf ~/Storage/"
alias lftor="lf ~/Storage/Downloads/Torrents/"
alias lfd="lf ~/Documents/"
alias lfdoc="lf ~/Storage/Documents/"
alias yamaha="lf ~/Storage/Documents/Yamaha/"
alias lfx="lf /run/media/tony/"
alias lfmtp="lf ~/.mtp/"
alias suckless="lfcd ~/Storage/Masters/Suckless/"

# emacs aliases
alias todos="emacsclient -n -c ~/Documents/org/todos.org"

# mount usb
alias usbmount="udisksctl mount -b /dev/sdc1"
alias usbunmount="udisksctl unmount -b /dev/sdc1"

# mount phone mtp
alias mtpmount="jmtpfs ~/mtp"
alias mtpunmount="fusermount -u ~/.mtp"

# click on point to get RGB value
alias getrgb="maim -st 0 | convert - -resize 1x1! -format '%[pixel:p{0,0}]' info:-"

# start factorio
alias factorio="sh ~/Storage/Games/Factorio/Factorio/run.sh"
# start Slay The Spire
alias slay="sh ~/Storage/Games/Slay\ the\ Spire/run.sh"

# change random wallpaper
alias wallpaper="sxiv ~/Pictures/Wallpapers/*"
alias wallpaper_random="feh --bg-fill --randomize ~/Pictures/Wallpapers/"

# Colorize commands if possible
alias ls="ls -hN --color=auto --group-directories-first"
alias la="ls -ahN --color=auto --group-directories-first"
alias grep="grep --color=auto"

# verbose commands
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -vI"
alias mkd="mkdir -pv"
alias yt="youtube-dl --add-metadata -i"
alias yta="yt -x -f bestaudio/best"
alias ffmpeg="ffmpeg -hide_banner"

# sxiv open all in directory
alias sxiv="~/.local/bin/rifle-sxiv.sh"

# Reload XResources
alias reloadx="xrdb ~/.config/XResources"

# youtube-dl
alias yt="youtube-dl"
