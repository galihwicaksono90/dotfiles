# wm independent hotkeys

# terminal launcher
# super + Return
# 	st

# program launcher
super + shift + Return
	# dmenu_run -bw 3 -c -l 20 -i

super + space
	rofi -show drun
	# dmenu_run -bw 3 -c -l 20-i
	#

super + shift + space
	rofi -show run

super + alt + space
	rofi -show calc

super + v
	clipcat-menu
	# dmenu_run -bw 3 -c -l 20 -i

super + Return
	alacritty

# make sxhkd reload its configuration files:
shift + ctrl + alt + Escape
	betterlockscreen -l dim

# make sxhkd reload its configuration files:
super + ctrl + Escape
	pkill -USR1 -x sxhkd && dunstify -u low -r  "656" "Sxhkd reloaded."

super + ctrl + x
	reloadx && notify-send -u low "Xresources reloaded"

super + alt + q
	restart_dwm

super + F6
	dunst_test
super + F7
	st -c "alsamixer" -e alsamixer
super + F8
	  wallpaper # select wallpaper script
super + F9
	mopidy & ; \
	st -c "ncmpcpp" -e ncmpcpp
super + ctrl + F9
	killall -q mopidy && killall -q ncmpcpp && notify-send "Mopidy" "Closed"
super + F10
	mpd ; \
	st -c "ncmpcpp" -e ncmpcpp
super + ctrl + F10
	killall -q mpd && killall -q ncmpcpp && notify-send "MPD" "Closed"
super + F11
	usb_mount
super + F12
	usb_unmount
XF86Display
	monitor_dmenu

XF86MonBrightnessUp
	brightnessctl -e4 -n2 set 5%+
XF86MonBrightnessDown
	light-control "decrease"

# super + ctrl + Prior 
# 	light-control "increase"
# super + ctrl + Next
# 	light-control "decrease"

XF86AudioRaiseVolume
	volume-control "increase"
XF86AudioLowerVolume
	volume-control "decrease"

# playerctl music control
XF86AudioStop
	playerctl stop
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous
XF86AudioPause
	playerctl play-pause

